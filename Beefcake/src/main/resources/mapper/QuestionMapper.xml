<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 指定工作空间，要与接口名相同，源代码没有去看，猜测应该是通过"这里的namespace.下边方法的id"来定位方法的 -->
<mapper namespace="com.example.demo.Mapper.QuestionMapper">


    <select id="getAllQuestion" resultType="com.example.demo.Entity.QuestionEntity">
        SELECT id,klass_seminar_id,attendance_id,team_id,student_id,is_selected,score FROM question WHERE klass_seminar_id=#{klassSeminarId}
    </select>

    <insert id="askQuestion">
        insert into question(klass_seminar_id,attendance_id,team_id,student_id) values (#{klassSeminarId},#{attendanceId},#{teamId},#{studentId})
    </insert>

    <update id="score">
        update question set score=#{score},is_selected=1 where id=#{questionId}
    </update>

</mapper>