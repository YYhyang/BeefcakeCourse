<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.Mapper.TeamValidApplicationMapper">
    <insert id="createRequest">
        insert into team_valid_application(team_id,teacher_id,reason,status) values (#{teamId},#{teacherId},#{reason},null)
    </insert>

    <update id="changeApplicationStatus">
        update team_valid_application set status=#{status} where team_id=#{teamId}
    </update>
</mapper>