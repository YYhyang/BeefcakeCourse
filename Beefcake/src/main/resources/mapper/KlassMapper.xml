<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.Mapper.KlassMapper">
    <select id="getKlassById" resultType="com.example.demo.Entity.ClassEntity">
        select * from klass where id=#{klassId}
    </select>

    <select id="getAllKlassId" resultType="java.lang.Long">
        select id from klass where course_id=#{courseId}
    </select>

    <insert id="createKlass">
        insert into klass(course_id,grade,klass_serial,klass_time,klass_location) values (#{courseId},#{grade},#{klassSerial},#{klassTime},#{klassLocation})
    </insert>

    <select id="getKlassId" resultType="java.lang.Long">
        select id from klass where course_id=#{courseId} and grade=#{grade} and klass_serial=#{klassSerial}
    </select>
</mapper>